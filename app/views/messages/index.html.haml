%body
  .flash-box
  .wrapper
    .chat-side
      .side-header
        .side-header_box
          %p.side-header_box_user-name aaa
          %ul.side-header_box_menu
            %li.side-header_box_menu_new-group
              = link_to do
                = fa_icon 'edit', class: 'icon'
            %li.side-header_box_menu_edit-user
              = link_to do
                = fa_icon 'cog', class: 'icon'
      .groups
        .group
          = link_to do
            %p.group_group-name aaa
          = link_to do
            %p.group_latest-message hello
    .chat-main
      .main-header
        .main-header_left-box
          %h2.main-header_left-box_current-group
            aaa
          %ul.main-header_left-box_member-list
            Member：
            %li.main-header_left-box_member-list_member aaa
        = link_to do
          .main-header_edit-btn Edit
      .messages
        .message
          .message_upper-info
            %p.message_upper-info_talker aaa
            %p.message_upper-info_date 2019/08/11(Sun) 18:51:55
          %p.message_text hello
        .message
          .message_upper-info
            %p.message_upper-info_talker aaa
            %p.message_upper-info_date 2019/08/11(Sun) 18:51:58
          %p.message_text hi
      .form
        %form#new_message.new_message{action: "", enctype: "", method: "post"}
          %input{name: "utf8", type: "hidden", value: "✓"}/
          %input{name: "authenticity_token", type: "hidden", value: ""}/
          .input-box
            %input#message_content.input-box_text{name: "message[content]", placeholder: "type a message", type: "text"}/
            %label.input-box_image{for: "message_image"}
              %i.fa.fa-image
              %input#message_image.input-box_image_file{name: "message[image]", type: "file"}/
          %input.submit-btn{"data-disable-with" => "Send", name: "commit", type: "submit", value: "Send"}/


